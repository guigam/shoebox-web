    <provider>org.hibernate.ejb.HibernatePersistence</provider>
    <class>ModelesParametrage.DefinitionPeriode</class>
    <class>ModelesParametrage.ParamTransaction</class>
    <class>ModelesParametrage.Permission</class>
    <class>ModelesParametrage.Utilisateur</class>
    <class>ModelesShoebox.CharteCompte</class>
    <class>ModelesShoebox.Client</class>
